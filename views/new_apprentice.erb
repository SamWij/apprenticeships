<div class="container">
<form  action="/view_apprentice" method="post" class="form-horizontal">
<fieldset>


<legend>Apprentice Registration</legend>

<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">first name</label>
  <div class="col-md-4">
    <input type="text" name="firstname" class="form-control input-md" placeholder="first name">
  </div>
</div>

<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">surname</label>
  <div class="col-md-4">
    <input type="text" name="surname" class="form-control input-md" placeholder="surname">
  </div>
</div>

<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">email</label>
  <div class="col-md-4">
    <input type="text" name="email" class="form-control input-md" placeholder="name@gmail.com">
  </div>
</div>

<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">Industry</label>
  <div class="row">
     <div class="col-xs-6 col-sm-3">
         <a class="btn btn-default btn-select">
             <input type="hidden" class="btn-select-input" id="" name="" value="" />
             <span class="btn-select-value">Select an Item</span>
             <span class='btn-select-arrow glyphicon glyphicon-chevron-down'></span>
             <ul>
                 <li>construction</li>
                 <li class="selected">electrical</li>
                 <li>plumbing</li>
                 <li>manufacturing</li>
             </ul>
         </a>
     </div>
  </div>
</div>

<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">state</label>
  <div class="col-md-4">
    <input type="text" name="state" class="form-control input-md" placeholder="e.g. VIC">
  </div>
</div>

<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">postcode</label>
  <div class="col-md-4">
    <input type="text" name="postcode" class="form-control input-md" placeholder="e.g. 3000">
  </div>
</div>



<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">password</label>
  <div class="col-md-4">
      <input type="password" name="password" class="form-control input-md">
  </div>
</div>




  <p><button class="btn btn-info btn-block">Register</button></p>
</fieldset>
</form>
</div>
