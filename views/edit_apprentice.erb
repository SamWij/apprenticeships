<h1>Profile of: <%= @apprentice.firstname %> <%= @apprentice.surname %></h1>
<h3>Profile Details</h3>
<form action="/view_apprentice/<%=@apprentice['id']%>" method = "post" >

  <input type="hidden" name="_method" value="put">
  <div class="form-group">
    <label class="col-md-5 control-label" for="textinput">industry</label>
    <select name="industry_selected_update" class="form-control input-md">
      <% @industries.each do |industry| %>
        <option value = "<%= industry.id %>" ><%= industry.name %></option>
      <% end %>
    </select>
  </div>



<div class="form-group">
  <label class="col-md-5 control-label">First Name</label>
  <input class="form-control input-md" name="update_firstname" value="<%= @apprentice.firstname %>">
</div>

<div class="form-group">
  <label class="col-md-5 control-label">Surname</label>
  <input class="form-control input-md" name="update_surname" value="<%= @apprentice.surname %>">
</div>

<div class="form-group">
  <label class="col-md-5 control-label" for="textinput">email</label>
  <input type="email" name="update_email" class="form-control input-md" value="<%= @apprentice.email %>">
</div>

<div class="form-group">
<label class="col-md-5 control-label" for="textinput">mobile number</label>
<input type="text" name="update_mobile" class="form-control input-md" value ="<%= @apprentice.mobile_no %>">
</div>

<div class="form-group">
  <label class="col-md-5 control-label" for="textinput">postcode</label>
  <input type="text" name="update_postcode" class="form-control input-md" value="<%= @apprentice.postcode %>">
</div>

<div class="form-group">
  <label class="col-md-5 control-label" for="textinput">state</label>
  <select name="update_state" class="form-control input-md">
    <% @states.each do |state| %>
      <option value = <%= state.id %> ><%= state.name %></option>
    <% end %>
  </select>
</div>

<h3>Work Preferences</h3>
  <div class="form-group">
    <input type="hidden" name="id" value= <%= session[:id] %> >
    <label class="col-md-5 control-label">Apprentice Level</label>
    <select class="level" name="update_level" value = "<%= @workpref.apprentice_level %>">
      <option value="Not Started">Not Started</option>
      <option value="1st Year">1st Year</option>
      <option value="1st Year">2nd Year</option>
      <option value="3rd Year">3rd Year</option>
    </select>
  </div>

<div class="form-group">
  <label class="col-md-5 control-label">preferred work location</label>
  <input type="text" name="update_location" class="form-control input-md" value ="<%= @workpref.preferred_work_location %>">
</div>

<div class="form-group">
  <label class="col-md-5 control-label">Jobseeking Status</label>
  <select class="level" name="update_status" value ="<%= @workpref.jobseeking_status %>">
    <option value="Actively Looking">Actively Looking</option>
    <option value="Could be tempted">Could be tempted</option>
  </select>
</div>

<div class="wrapper">
  <p><button class="btn btn-success">Update</button></p>
</div>
</form>
